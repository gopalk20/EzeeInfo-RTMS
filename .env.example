#--------------------------------------------------------------------
# Environment Configuration for PHP 8.4 + CodeIgniter 4 + Smarty + MySQL
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------
CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------
app.baseURL = 'http://localhost:8080/'
app.forceGlobalSecureRequests = false
app.CSPEnabled = false

#--------------------------------------------------------------------
# DATABASE (MySQL Configuration)
#--------------------------------------------------------------------
database.default.hostname = localhost
database.default.database = codeigniter_smarty
database.default.username = root
database.default.password = 
database.default.DBDriver = MySQLi
database.default.DBPrefix = 
database.default.port = 3306
database.default.charset = utf8
database.default.DBCollat = utf8_general_ci

#--------------------------------------------------------------------
# EMPLOYEE IMPORT (optional)
#--------------------------------------------------------------------
# Path to Excel file for EmployeeImportSeeder. Default: writable/import/All Employees - EzeeInfo Cloud Solutions.xlsx
# EMPLOYEE_IMPORT_FILE = writable/import/employees.xlsx

#--------------------------------------------------------------------
# EMAIL (Gmail SMTP for approval/rejection notifications - or use Admin â†’ Email Settings)
#--------------------------------------------------------------------
# email.protocol = smtp
# email.SMTPHost = smtp.gmail.com
# email.SMTPUser = yourname@gmail.com
# email.SMTPPass = your-16-char-app-password
# email.SMTPPort = 587
# email.SMTPCrypto = tls
# email.fromEmail = yourname@gmail.com
# email.fromName = RTMS

#--------------------------------------------------------------------
# LOGGING
#--------------------------------------------------------------------
logger.threshold = 4

#--------------------------------------------------------------------
# CE_TOOLBAR
#--------------------------------------------------------------------
toolbar.enabled = true

#--------------------------------------------------------------------
# SMARTY TEMPLATE ENGINE
#--------------------------------------------------------------------
smarty.template_dir = APPPATH/templates
smarty.compile_dir = WRITABLEPATH/smarty_compile
smarty.cache_dir = WRITABLEPATH/smarty_cache
smarty.config_dir = APPPATH/smarty_config
smarty.cache_enabled = false
smarty.cache_lifetime = 3600
