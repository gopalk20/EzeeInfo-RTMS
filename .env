#--------------------------------------------------------------------
# Environment Configuration for Resource Timesheet Management System (RTMS)
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------
CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------
app.baseURL = 'http://localhost:8080/'
app.forceGlobalSecureRequests = false
app.CSPEnabled = false

# Production security (FR-032): Set to true when using HTTPS
# app.forceGlobalSecureRequests = true
# cookie.secure = true

#--------------------------------------------------------------------
# DATABASE (SQLite Configuration for Local Development)
#--------------------------------------------------------------------
# Uncomment below for MySQL:
# database.default.DBDriver = MySQLi
# database.default.hostname = localhost
# database.default.username = root
# database.default.password = 
# database.default.database = rtms
# database.default.port = 3306

# SQLite (for local development - zero configuration):
database.default.DBDriver = SQLite3
database.default.database = WRITABLEPATH/database.sqlite

#--------------------------------------------------------------------
# GITHUB (optional - for issues sync)
#--------------------------------------------------------------------
# GITHUB_PAT = your_personal_access_token

#--------------------------------------------------------------------
# LOGGING
#--------------------------------------------------------------------
logger.threshold = 4

#--------------------------------------------------------------------
# CE_TOOLBAR
#--------------------------------------------------------------------
toolbar.enabled = true

#--------------------------------------------------------------------
# SMARTY TEMPLATE ENGINE
#--------------------------------------------------------------------
smarty.template_dir = APPPATH/templates
smarty.compile_dir = WRITABLEPATH/smarty_compile
smarty.cache_dir = WRITABLEPATH/smarty_cache
smarty.config_dir = APPPATH/smarty_config
smarty.cache_enabled = false
smarty.cache_lifetime = 3600
